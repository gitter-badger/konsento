/ START Top Navbar
%nav.navbar.topnavbar{:role => "navigation"}
  / START navbar header
  .navbar-header
    %button.navbar-toggle{"data-target" => ".navbar-collapse", "data-toggle" => "collapse", :type => "button"}
      %span.sr-only Toggle navigation
      %span.icon-bar
      %span.icon-bar
      %span.icon-bar
    =link_to root_path, id: "brand" do
      %img{:alt => "Konsento", :src => image_path('konsento-logo.png')}
      .name Konsento
  / END navbar header
  / START Nav wrapper
  .navbar-collapse.collapse
    / START Right Navbar
    %ul.nav.navbar-nav.navbar-right
      / Search icon
      %li
        %a{"data-search-open" => "", :href => "#"}
          %em.icon-magnifier
      / START Alert menu
      %li.dropdown.dropdown-list
        %a{"data-toggle" => "dropdown", :href => "#"}
          %em.icon-bell
          .label.label-danger 1
        / START Dropdown menu
        %ul.dropdown-menu.animated.flipInX
          %li
            / START list group
            .list-group
              / list item
              %a.list-group-item{:href => "#"}
                .media-box
                  .pull-left
                    %em.fa.fa-comment.fa-2x
                  .media-box-body.clearfix
                    %p.m0 Novos comentários
                    %p.m0.text-muted
                      %small 10 novos comentários
              / last list item
              %a.list-group-item{:href => "#"}
                %small Mais notificações
                %span.label.label-success.pull-right 0
            / END list group
        / END Dropdown menu
      / END Alert menu

      %li.dropdown.dropdown-list
        %a{"data-toggle" => "dropdown", :href => "#"}
          %em.icon-user
        %ul.dropdown-menu
          %li
            %a{:href => "#"}
              Entrar
          %li.dropdown-header
            Não é cadastrado?
          %li
            %a{:href => "#"}
              Cadastrar

      / START User button
      %li
        %a{"data-no-persist" => "true", "data-toggle-state" => "offsidebar-open", :href => "#"}
          %em.icon-user
      / END User menu
    / END Right Navbar
  / END Nav wrapper
  / START Search form
  %form.navbar-form{:action => "search.html", :role => "search"}
    .form-group.has-feedback
      %input.form-control{:placeholder => "Digite o que procura e aperte enter...", :type => "text"}/
      .fa.fa-times.form-control-feedback{"data-search-dismiss" => ""}
    %button.hidden.btn.btn-default{:type => "submit"} Submit
  / END Search form
/ END Top Navbar
